{% extends "layout.html.twig" %}

{% block navlink %}
<li class="nav-item">
    <a class="nav-link" href="{{ app.url_generator.generate('ListRecall') }}">List Recall <span class="sr-only">(current)</span></a>
</li>
<li class="nav-item">
    <a class="nav-link active" href="{{ app.url_generator.generate('AddRecall') }}">Add Recall <span class="sr-only">(current)</span></a>
</li>
<li class="nav-item">
    <a class="nav-link" href="/moreRecall/1">More Recall <span class="sr-only">(current)</span></a>
</li>
{% endblock %}


{% block linkcss %}
    <link href="{{ asset('css/signin.css') }}" rel="stylesheet">
{% endblock %}

{% block content %}
    <div class="container">

        <form class="form-signin">
            <h2 class="form-signin-heading">Add Recall</h2>
            <label for="inputEmail" class="sr-only">Name</label>
            <input type="text" name="name" id="inputEmail" class="form-control" placeholder="Name" required autofocus>
            <label for="inputPassword" class="sr-only">Text</label>
            <textarea type="text" name="text" style="margin-top: 5px" id="inputText" class="form-control" placeholder="Recall" required></textarea>

            <input type="submit" class="btn btn-lg btn-primary btn-block" style="margin-top: 10px" value="Add Recall" name="add">
        </form>

    </div> <!-- /container -->
{% endblock %}